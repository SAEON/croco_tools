%CCOMPILER      mpiCC
%FCOMPILER      mpif90
%LINKER         mpif90

%BASE_CFLAGS    -w
%PROD_CFLAGS    -O3 -D BOOST_DISABLE_ASSERTS 
%DEV_CFLAGS     -g
%DEBUG_CFLAGS   -g -O2

%BASE_FFLAGS    -D__NONE__
