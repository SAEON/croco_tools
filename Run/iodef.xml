<?xml version="1.0"?>
<simulation> 
<!-- <context id="romsc" calendar_type="Gregorian" start_date="2012-03-01 15:00:00" time_origin="2012-02-29 15:00:00"> -->
 <context id="roms" time_origin="1950-01-01 00:00:00" >
    


  <!-- ========================================================================== -->
  <!-- ========================================================================== -->

    <field_definition src="./field_def.xml"/>

   <!-- ========================================================================== -->
   <!-- ========================================================================== -->

   <file_definition type="multiple_file"  name="@expname@_@freq@_@startdate@_@enddate@" sync_freq="1d" min_digits="4">
<!--   <file_definition type="one_file" output_freq="1800s" output_level="10" enabled=".TRUE."> -->
      <file_group id="1ts" output_freq="1ts"  output_level="10" enabled=".TRUE."/> <!-- 1 time step files -->
      <file_group id="1h" output_freq="1h"  output_level="10" enabled=".TRUE."/> <!-- 1h files -->
      <file_group id="2h" output_freq="2h"  output_level="10" enabled=".TRUE."/> <!-- 2h files -->
      <file_group id="3h" output_freq="3h"  output_level="10" enabled=".TRUE."/> <!-- 3h files -->
      <file_group id="4h" output_freq="4h"  output_level="10" enabled=".TRUE."/> <!-- 4h files -->
      <file_group id="6h" output_freq="6h"  output_level="10" enabled=".TRUE."/> <!-- 6h files -->
      <file_group id="5d" output_freq="5d"  output_level="10" enabled=".TRUE."/> <!-- 1d files -->
      <file_group id="3d" output_freq="3d"  output_level="10" enabled=".TRUE."/> <!-- 3d files -->

     <file_group id="1d" output_freq="1d"  output_level="10" enabled=".TRUE." >  <!-- 1d files -->
     <file id="file1" name_suffix="_his" >
       <field_group id="grid_fields" operation="once">
        <field field_ref="h" />
        <field field_ref="f" />
        <field field_ref="pm" />
        <field field_ref="pn" />
        <field field_ref="lon_rho" />
        <field field_ref="lat_rho" />
        <field field_ref="lon_u" />
        <field field_ref="lat_u" />
        <field field_ref="lon_v" />
        <field field_ref="lat_v" />
        <field field_ref="angle" />
        <field field_ref="mask_rho" />
      </field_group>

       <field_group id="his_fields" operation="instant">
        <field field_ref="zeta" />
        <field field_ref="u" name="u" />
        <field field_ref="v" name="v" />
        <field field_ref="w" name="w" />
        <field field_ref="temp" name="T" />
       </field_group>
      </file>
    </file_group>

   </file_definition>

  <!-- ========================================================================== -->
  <!-- ========================================================================== -->

   <axis_definition>
    <axis_group id="s_r">
     <axis id="s_r" />
    </axis_group>
    <axis_group id="s_w">
     <axis id="s_w" />
    </axis_group>
 <!-- For Sediment -->
    <axis_group id="s_b">
     <axis id="s_b" />
    </axis_group>
   </axis_definition>

   <domain_definition src="./domain_def.xml"/>

   <grid_definition>    
     <grid id="grid_T_2D" domain_ref="grid_T"/>
     <grid id="grid_T_3D" domain_ref="grid_T" axis_ref="s_r"/>
     <grid id="grid_U_2D" domain_ref="grid_U"/>
     <grid id="grid_U_3D" domain_ref="grid_U" axis_ref="s_r"/>
     <grid id="grid_V_2D" domain_ref="grid_V"/>
     <grid id="grid_V_3D" domain_ref="grid_V" axis_ref="s_r"/>
     <grid id="grid_W_2D" domain_ref="grid_W"/>
     <grid id="grid_W_3D" domain_ref="grid_W" axis_ref="s_w"/> 
     <grid id="grid_b_2D" domain_ref="grid_b"/>
     <grid id="grid_b_3D" domain_ref="grid_b" axis_ref="s_b"/> 
   </grid_definition>    
  
  </context>

  

  <!-- ========================================================================== -->
  <!-- ========================================================================== -->

  
  <context id="xios">
      <variable_definition>
          <variable id="buffer_size"               type="integer">5000000</variable>
          <variable id="buffer_server_factor_size" type="integer">2</variable>
          <variable id="info_level"                type="integer">0</variable>
          <variable id="using_server"              type="boolean">true</variable>
          <variable id="using_oasis"               type="boolean">false</variable>
          <variable id="oasis_codes_id"            type="string" >oceanx</variable>
      </variable_definition>
  </context>

</simulation>

